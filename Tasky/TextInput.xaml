<Window x:Class="Tasky.TextInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tasky"
        mc:Ignorable="d"
        Title="TextInput" Height="100" Width="300"
        Left="{Binding WindowLeft}" Top="{Binding WindowTop}"
        Loaded="Window_Loaded">
    <Grid>
        <StackPanel>
        <TextBox Margin="5" Text="{Binding TaskName}" Name="TextBoxTaskName" />
        <Button Margin="5" Click="Button_Click">Bestätigen</Button>
        </StackPanel>
    </Grid>
</Window>
